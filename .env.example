# =========================================
# DocMind AI Configuration
# =========================================
# Local document analysis with hybrid search, multi-agent coordination,
# and GPU acceleration. Based on LlamaIndex 0.12.52 + LangGraph 0.5.4

# =========================================
# CORE BACKEND CONFIGURATION
# =========================================
BACKEND=ollama
OLLAMA_BASE_URL=http://localhost:11434
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LLAMACPP_MODEL_PATH=/path/to/model.gguf
DEFAULT_MODEL=google/gemma-3n-E4B-it
CONTEXT_SIZE=4096

# =========================================
# VECTOR DATABASE
# =========================================
QDRANT_URL=http://localhost:6333

# =========================================
# DENSE EMBEDDINGS (Research-backed BGE-Large)
# =========================================
DENSE_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
DENSE_EMBEDDING_DIMENSION=1024

# =========================================
# SPARSE EMBEDDINGS (Research-backed SPLADE++)
# =========================================
SPARSE_EMBEDDING_MODEL=prithvida/Splade_PP_en_v1
ENABLE_SPARSE_EMBEDDINGS=true

# =========================================
# RRF HYBRID SEARCH (Research-optimized)
# =========================================
RRF_FUSION_WEIGHT_DENSE=0.7
RRF_FUSION_WEIGHT_SPARSE=0.3
RRF_FUSION_ALPHA=60

# =========================================
# RERANKING CONFIGURATION
# =========================================
DEFAULT_RERANKER_MODEL=jinaai/jina-reranker-v2-base-multilingual
ENABLE_COLBERT_RERANKING=true
RERANKING_TOP_K=5

# =========================================
# GPU ACCELERATION
# =========================================
GPU_ACCELERATION=true
CUDA_DEVICE_ID=0
EMBEDDING_BATCH_SIZE=32
PREFETCH_FACTOR=2

# =========================================
# PERFORMANCE OPTIMIZATION
# =========================================
ENABLE_QUANTIZATION=true
QUANTIZATION_TYPE=int8
MAX_CONCURRENT_REQUESTS=10

# =========================================
# LEGACY COMPATIBILITY
# =========================================
DEFAULT_EMBEDDING_MODEL=jinaai/jina-embeddings-v4