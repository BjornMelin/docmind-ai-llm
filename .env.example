# DocMind AI Configuration Example
# Copy this file to .env and update the values as needed

# ============================================================================
# Core LLM Configuration
# ============================================================================
DEFAULT_MODEL=qwen2:7b
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# ============================================================================
# Backend Service URLs
# ============================================================================
# Ollama service URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# LM Studio service URL (default: http://localhost:1234/v1)
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# LlamaCpp model path (for local GGUF files)
LLAMACPP_MODEL_PATH=/path/to/your/model.gguf

# Qdrant vector database URL
QDRANT_URL=http://localhost:6333

# ============================================================================
# Search & Retrieval Configuration
# ============================================================================
# Reciprocal Rank Fusion (RRF) alpha parameter for hybrid search
RRF_FUSION_ALPHA=0.7

# Dense embedding settings
DENSE_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
DENSE_EMBEDDING_DIMENSION=1024

# Sparse embedding settings
ENABLE_SPARSE_EMBEDDINGS=false
SPARSE_EMBEDDING_MODEL=prithivida/Splade_PP_en_v1

# RRF fusion weights (must sum to 1.0)
RRF_FUSION_WEIGHT_DENSE=0.7
RRF_FUSION_WEIGHT_SPARSE=0.3

# ============================================================================
# Reranking Configuration
# ============================================================================
ENABLE_COLBERT_RERANKING=true
RERANKER_MODEL=jinaai/jina-reranker-v2-base-multilingual
RERANKING_TOP_K=5

# ============================================================================
# Document Processing Configuration
# ============================================================================
# Document parsing strategy for Unstructured
# Options: auto (default/automatic), hi_res (best quality), fast (faster processing), 
#          ocr_only (OCR only), vlm (vision language model)
PARSE_STRATEGY=hi_res

# ============================================================================
# Hardware & Performance
# ============================================================================
# Enable GPU acceleration (requires NVIDIA GPU with CUDA)
GPU_ACCELERATION=true

# ============================================================================
# Optional: OpenAI API (for fallback or comparison)
# ============================================================================
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_ORG_ID=your_openai_org_id_here

# ============================================================================
# Development & Debugging
# ============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Phoenix observability dashboard
ENABLE_PHOENIX=false